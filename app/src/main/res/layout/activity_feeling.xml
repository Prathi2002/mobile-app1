<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#800080"
    tools:context=".feeling">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="HOW ARE YOU FEELING TODAY?"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:inputType="textPersonName"
        android:text="I am sad"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#ffccff"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="298dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:text="I am depressed"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="387dp"
        android:textStyle="bold"
        android:textColor="#ffccff"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:text="I am lonely"
        tools:layout_editor_absoluteX="58dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="481dp"
        android:textStyle="bold"
        android:textColor="#ffccff"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:text="I had a bad day"
        tools:layout_editor_absoluteX="56dp"
        android:textStyle="bold"
        android:textColor="#ffccff"
        tools:layout_editor_absoluteY="575dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:text="I need motivation"
        tools:layout_editor_absoluteX="56dp"
        android:textStyle="bold"
        android:textColor="#ffccff"
        tools:layout_editor_absoluteY="575dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>